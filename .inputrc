# Read default system configuration
#
# Use 'bind -p' to see current keymap configuration.
# Use 'bind -v' to see current applied configuration.
#
$include /etc/inputrc

# Instead of emacs keymap use vi keymap
#
set editing-mode vi

# No visual/sound bell
#
set bell-style none

# Allow UTF-8 input and output, instead of showing stuff like $'\0123\0456'
#
set input-meta on
set output-meta on

# make tab-completion case insensitive.
#
set completion-ignore-case on

# List all matches in case multiple possible completions are possible
#
set show-all-if-ambiguous on

# Immediately add a trailing slash when autocompleting symlinks to directories
#
set mark-symlinked-directories on

# Do not autocomplete hidden files unless the pattern explicitly begins with a
# dot.
#
set match-hidden-files off

# Show all autocomplete results at once
#
set page-completions off

# If there are more than 200 possible completions for a word, ask to show them
# all
#
set completion-query-items 200

# Show extra file information when completing like `ls -F` does.
#
set visible-stats on

# Be more intelligent when autocompleting by also looking at the text after
# the cursor.
#
# For example, when the current line is "cd ~/src/mozil", and
# the cursor is on the "z", pressing Tab will not autocomplete it to "cd
# ~/src/mozillail", but to "cd ~/src/mozilla".
# (This is supported by the readline used by bash 4+)
#
set skip-completed-text on

$if mode=vi

# Keymap for vim-command mode
#
set keymap vi-command

# History search with arrow up and arrow down
#
"\e[A": history-search-backward
"\e[B": history-search-forward
"\eOA": history-search-backward
"\eOB": history-search-forward

# Clearing screen
#
Control-l: clear-screen

# Word moving with Ctrl-left-arrow and Ctrl-right-arrow.
#
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word


# Keymap for vim-insert mode
#
set keymap vi-insert

# History search with arrow up and arrow down
#
"\e[A": history-search-backward
"\e[B": history-search-forward
"\eOA": history-search-backward
"\eOB": history-search-forward

# Clearing screen
#
Control-l: clear-screen

# Word moving with Ctrl-left-arrow and Ctrl-right-arrow.
#
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

